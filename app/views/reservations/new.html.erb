<%= render 'shared/navbar' %>
<div class="container">
  <h2>Créer une réservation</h2>
  <div class="row">
    <div class="col-xs-offset-2 col-xs-8">
      <%= simple_form_for(@reservation) do |f| %>
        <%= f.input :info, autofocus: true, placeholder: 'Petit message sympathique ou non...' %>
        <%= f.input :start_date, id:'datepicker', label: 'Du', as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 30,
                              order: [:day, :month, :year] %>
        <%= f.input :end_date, label: 'Au', as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 30,
                              order: [:day, :month, :year] %>

        <!-- <p><input type="text" class="datepicker" name=reservation[start_date] placeholder='Du'></p>
        <p><input type="text" class="datepicker" name=reservation[end_date] placeholder='Du'></p> -->
        <%= f.button :submit %>
      <% end %>

    </div>
  </div>
</div>


