<%= render 'shared/navbar' %>
<div class="container">
  <h2>Créer une réservation</h2>
  <div class="row">
    <div class="col-xs-offset-2 col-xs-8">
      <%= simple_form_for(@reservation) do |f| %>
        <%= f.input :title, placeholder: 'Titre', autofocus: true %>
        <%= f.input :info, placeholder: 'Petit message sympathique ou non...' %>
        <%= f.input :start_date, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 30,
                              order: [:day, :month, :year] %>
        <%= f.input :end_date, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 30,
                              order: [:day, :month, :year] %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
