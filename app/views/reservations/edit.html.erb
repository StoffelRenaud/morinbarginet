<%= render 'shared/navbar' %>
<div class="container">
  <h2>Modifier une r√©servation</h2>
  <div class="row">
    <div class="col-xs-offset-2 col-xs-8">
      <%= simple_form_for(@reservation) do |f| %>
        <%= f.input :info, autofocus: true %>
        <%= f.input :start_date, label: 'Du', as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 30,
                              order: [:day, :month, :year] %>
        <%= f.input :end_date, label: 'Au', as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 30,
                              order: [:day, :month, :year] %>
        <%= f.button :submit, method: :patch %>
      <% end %>
    </div>
  </div>
</div>
